<p id="notice"><%= notice %></p>
<h1>Properties</h1>
<div class="row">
  <% @properties.each do |property| %>
  <div class="card" style="width: 18rem; background-color: #fff">
  <div class="card-body">
  <% if property.avatar.attached? %>
    <%= image_tag property.avatar, width: "200px" %>
  <% end %>
  <h5 class="card-title"><%= property.title%></h5>
  <p class="card-text">
    <%= property.location %> <br>
    <%= property.rate %><br>
    <%= property.area %>
    <%= property.description %>
    </p>
  <% if current_user.role == 'Seller' %>
  <%= link_to 'Show', property %>
  <%= link_to 'Edit', edit_property_path(property) %>
  <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% else %>
   <%= link_to 'Show', property %>
  <% end %>
</div>
</div>
    <% end %>
<br>
<% if current_user.role == 'Seller' %>
<%= link_to 'New Property', new_property_path %>
<% else %>
<%= link_to 'Back' ,buyers_index_path %>
<% end %>

<% if current_user.role == 'Seller' %>
  <%= link_to 'Back' ,sellers_path %>
<% end %>