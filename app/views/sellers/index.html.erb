<% if current_user.role == 'Seller' %>
<h1 style= "color: black;"> Seller </h1>
<%= link_to "Profile",sellers_new_path, class:"btn btn-primary"%> | 
<%= link_to "Create New Property", new_property_path, class: "btn btn-primary" %> |
<%= link_to "Property", properties_path, class: "btn btn-primary" %> |
<%= link_to "My Property", properties_path(my_property: true), class: "btn btn-primary" %>
<div class="row"> 
    <% if @properties.present? %>
    <% @properties.each do |p|%>
    <div class="col-md-3 my-2">
    <div class="card">
        <div class="card-body">
            <% if p.avatar.attached? %>
            <%= image_tag p.avatar, height: "200px" , width: "90%" %>
            <% end %>
            <h5 style="color :black;" class="card-title"><%= p.title%></h5>
            <h6 style="color :black;"> <p class="card-text">
             <%= p.location %> <br>
             <%= p.rate %><br>
             <%= p.area %>
         </p>
     </h6>
    </div>
     <div class="card">
        <%= link_to "View", property_path(p), class:"btn btn-primary"%>
    </div>
</div>
</div>
<% end %>
<% end %>
<% else %>
<center>
    You are at wrong section
    <% end %>

