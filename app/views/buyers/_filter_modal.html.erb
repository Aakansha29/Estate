<div id="property_filter_modal"  class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Search Property</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <h4 class="modal-title popup-modal-title"></h4>
      </div>

      <div class="modal-body popup-modal-body">
        <%= form_for "Buyers" ,method: :get do %>
        <%= text_field_tag :title, @search ,placeholder: "search title" %> 
        <% end %>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= link_to 'search', filter_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>